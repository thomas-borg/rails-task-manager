<h2><%= @task.title %></h2>
<%= link_to "Edit this task", edit_path%>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p><input type="checkbox" name="tasks" checked> This task is completed</p>
<% else %>
  <p><input type="checkbox" name="tasks"> This task is not completed yet</p>
<% end %>
<%= link_to "Back to list", tasks_path %>
